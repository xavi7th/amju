{
    "name": "laravel/laravel",
    "description": "The Laravel Framework.",
    "keywords": [
        "framework",
        "laravel"
    ],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^7.1.3",
        "barryvdh/laravel-debugbar": "^3.2",
        "danielme85/laravel-log-to-db": "^1.1",
        "facade/ignition": "^1.11",
        "fideloper/proxy": "^4.0",
        "guzzlehttp/guzzle": "^6.3",
        "laravel/framework": "5.8.*",
        "laravel/tinker": "^1.0",
        "nwidart/laravel-modules": "^5.0",
        "orangehill/iseed": "^2.6",
        "spatie/laravel-blade-javascript": "^2.4",
        "watson/rememberable": "^2.0"
    },
    "require-dev": {
        "astrotomic/ignition-stackoverflow": "^1.4",
        "facade/ignition-self-diagnosis": "^1.0",
        "facade/ignition-tinker-tab": "^1.0",
        "fzaninotto/faker": "^1.4",
        "mockery/mockery": "^1.0",
        "nunomaduro/collision": "^2.0",
        "phpunit/phpunit": "^7.0",
        "stefanbauer/ignition-laracasts-tab": "^0.2.0"
    },
    "autoload": {
        "files": [
            "app/helpers.php"
        ],
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "scripts": {
       "compile": [
         "@php artisan config:clear",
         "@php artisan debugbar:clear",
         "@php artisan route:clear",
         "@php artisan cache:clear",
         "@php artisan view:clear",
         "@php artisan event:clear",
         "@php artisan key:generate",
         "@php artisan storage:link",
         "@php artisan migrate:fresh --force",
         "@php artisan module:seed",
         "@php artisan auth:clear-resets",
         "@php artisan route:cache",
         "@php artisan config:cache",
         "@php artisan optimize",
         "composer dumpautoload",
         "npm run prod"
       ],
       "recompile": [
         "@php artisan config:clear",
         "@php artisan debugbar:clear",
         "@php artisan route:clear",
         "@php artisan cache:clear",
         "@php artisan view:clear",
         "@php artisan log:delete",
         "@php artisan storage:link",
         "@php artisan auth:clear-resets",
         "@php artisan route:cache",
         "@php artisan config:cache",
         "@php artisan optimize",
         "composer dumpautoload"
       ],
       "reseed": [
         "@php artisan config:clear",
         "@php artisan debugbar:clear",
         "@php artisan route:clear",
         "@php artisan cache:clear",
         "@php artisan view:clear",
         "@php artisan event:clear",
         "@php artisan migrate:fresh",
         "@php artisan module:seed",
         "composer dumpautoload"

       ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
